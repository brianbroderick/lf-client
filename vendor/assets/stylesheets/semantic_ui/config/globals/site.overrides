/* browsers require these rules separate */
.placeholder_light ::-webkit-input-placeholder {
  color: rgba(255, 255, 255, 1) !important;
}
.placeholder_light ::-ms-input-placeholder {
  color: rgba(255, 255, 255, 1) !important;
}
.placeholder_light :-ms-input-placeholder {
  color: rgba(255, 255, 255, 1) !important;
}
.placeholder_light ::-moz-placeholder {
  color: rgba(255, 255, 255, 1) !important;
}
